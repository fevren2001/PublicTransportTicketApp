<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ticketCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#2A2A2A"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with ticket ID and price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/ticketIdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TICKET_123456789"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬10.00"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Purchase time -->
        <TextView
            android:id="@+id/purchaseTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchased: Jul 25, 2025 14:30"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Valid until -->
        <TextView
            android:id="@+id/validUntilText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid until: Jul 26, 2025 14:30"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- Status badge -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="ACTIVE"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>