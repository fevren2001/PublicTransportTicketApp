<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Alert Dialog Style -->
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">#2A2A2A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorPrimary">#6200EA</item>
        <item name="colorAccent">#6200EA</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#6200EA</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>